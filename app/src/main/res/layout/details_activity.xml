<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        tools:context=".ContactDetails"
        android:fillViewport="true">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/details_image"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="153dp"/>

        <EditText
                android:text="Name:"
                android:id="@+id/details_name"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/details_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"/>
        <EditText
                android:text="Second Name: "
                android:id="@+id/details_second_name"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"/>
        <EditText
                android:text="Phone: "
                android:id="@+id/details_phone"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/details_second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"/>
        <EditText
                android:text="Email:"
                android:id="@+id/details_email"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/details_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"/>

        <LinearLayout
                android:layout_below="@id/details_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="2"
                android:orientation="horizontal">


            <Button
                    android:text="Update"
                    android:id="@+id/details_update"
                    android:layout_width="120dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>

            <Button
                    android:text="Delete"
                    android:id="@+id/details_delete"
                    android:layout_width="120dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>